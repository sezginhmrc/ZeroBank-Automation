<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <!-- Project -->
    <groupId>com.zerobank</groupId>
    <artifactId>ZeroBank-Automation</artifactId>
    <version>1.0-SNAPSHOT</version>

    <!-- All of above are auto-generated lines -->



    <!--  to compile source code of project  -->
    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>


        <profile>
            <id>Functional</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.8.1</version>
                        <configuration>
                            <source>8</source>
                            <target>8</target>
                        </configuration>
                    </plugin>

                    <plugin>

                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M4</version>


                        <configuration>
                            <!-- for parallel running Cucumber-->
                            <parallel>methods</parallel> <!--  methods, classes   -->
                            <useUnlimitedThreads>true</useUnlimitedThreads>

                            <threadCount>2</threadCount>
                            <perCoreThreadCount>false</perCoreThreadCount>
                            <forkCount>2C</forkCount>

                            <!-- for  run class or classes-->
                            <includes>
                                <include>**/CucumberRunner.java</include>
                                <!-- since it is regression profile it included regressin runner -->
                            </includes>
                            <excludes>
                                <!--  not failedrunner included.      -->

                            </excludes>
                            <testFailureIgnore>true</testFailureIgnore>
                        </configuration>

                    </plugin>

                </plugins>
            </build>
        </profile>

    </profiles>



     <!-- Compile the application sources -->
    <build>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.8.1</version>
                    <configuration>
                        <source>8</source>
                        <target>8</target>
                    </configuration>
                </plugin>


                <plugin>
                    <!-- it allows us to execute speified test runner class or classes   -->
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>3.0.0-M4</version>

                    <configuration>
                        <!-- paralle execution in methods  -->
                        <parallel>classes</parallel> <!--  methods, classes   -->
                        <useUnlimitedThreads>true</useUnlimitedThreads>

                        <threadCount>2</threadCount>
                        <perCoreThreadCount>false</perCoreThreadCount>
                        <forkCount>2C</forkCount>

                        <includes>
                            <include>**/CucumberRunner.java</include>

                        </includes>
                        <testFailureIgnore>true</testFailureIgnore>
                    </configuration>

                </plugin>



                <!--  Cucumber Cool Html Plugin      -->
                <plugin>
                    <groupId>net.masterthought</groupId>
                    <artifactId>maven-cucumber-reporting</artifactId>
                    <version>4.5.0</version>
                    <executions>
                        <execution>
                            <id>execution</id>
                            <phase>verify</phase>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <configuration>
                                <projectName>Cucumber HTML Reports</projectName>
                                <outputDirectory>${project.build.directory}</outputDirectory>
                                <inputDirectory>${project.build.directory}</inputDirectory>
                                <jsonFiles>
                                    <param>**/cucumber*.json</param>
                                </jsonFiles>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

            </plugins>
        </build>





    <dependencies>

        <!-- Cucumber -->
        <dependency>
            <groupId>io.cucumber</groupId>
            <artifactId>cucumber-java</artifactId>
            <version>5.6.0</version>
        </dependency>


        <!-- Cucumber Junit  -->
        <dependency>
            <groupId>io.cucumber</groupId>
            <artifactId>cucumber-junit</artifactId>
            <version>5.6.0</version>
            <scope>test</scope>
        </dependency>

        <!-- Selenium -->
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>3.141.59</version>
        </dependency>

        <!-- WebDriverManager -->
        <dependency>
            <groupId>io.github.bonigarcia</groupId>
            <artifactId>webdrivermanager</artifactId>
            <version>3.8.1</version>
        </dependency>

        <!-- Logger eanble logger into output  -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.30</version>
        </dependency>

        <!-- required by ide       -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.7.30</version>
        </dependency>



    </dependencies>



</project>